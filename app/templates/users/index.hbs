{{page-title 'User'}}

<div class='switch-toggle-layer'>
  <ToggleButton
    @toggleState={{this.toggleArchiveState}}
    @isArchived={{this.users.archived}}
  />
</div>

<div class='container'>
  <div class='columns is-centered'>

    {{#each @model as |user|}}
      <div class='column'>

        <LinkTo @route='users.user' @model={{user}}>
          <div class='user-select is-220px'>
            <img
              class='is-pulled-left'
              src={{user.image}}
              width='60px'
              alt='profile-image'
            />
            <p>{{user.name}}</p>
          </div>
        </LinkTo>

      </div>
    {{/each}}

  </div>
</div>