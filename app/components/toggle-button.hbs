<div class='switch-toggle switch-3 switch-candy'>

  <input
    id='archived'
    name='state-d'
    type='radio'
    checked={{eq @isArchived 0}}
  />
  <label for='archived' {{on 'click' this.showUsers}}>Users</label>

  <input id='all' name='state-d' type='radio' checked={{eq @isArchived 1}} />
  <label for='all' class='disabled' {{on 'click' this.showAllUsers}}>All Users</label>

</div>
{{yield}}